<body  style="background: #78694a">
    <header id="header" class="fixed-top d-flex align-items-center mb-5">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-lg-between">
                  <h1 class="logo me-auto me-lg-0"><a href="index.html">Restaurantly</a></h1>

            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li><a class="nav-link scrollto active" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="nav-link scrollto" asp-area="" asp-controller="Category" asp-action="Index">Category</a></li>
                    <li><a class="nav-link scrollto" asp-area="" asp-controller="Food" asp-action="Index">Food</a></li>
                    <li><a class="nav-link scrollto" asp-area="" asp-controller="Order" asp-action="Index">Order</a></li>
                    <li><a class="nav-link scrollto" href="#events">Events</a></li>
                    <li><a class="nav-link scrollto" href="#chefs">Chefs</a></li>
                    <li><a class="nav-link scrollto" href="#gallery">Gallery</a></li>
                    <li><a class="nav-link scrollto" href="#contact">Contact</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
                     <partial name="_LoginPartial" />
                
            </nav>
        </div>
    </header>
    
           @RenderBody()
          
 

    <script src="/template/vendor/aos/aos.js"></script>
    <script src="/template/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
