@model Category
@{
    ViewData["Title"] = "Edit";
}

<form method="post " style="margin-top: 10rem">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-white">Edit Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
   <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <br />
        <hr />
        <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
        <a asp-action="Index" asp-controller="Category" class="btn btn-secondary" style="width:150px">
            back to Categories 
        </a>
    </div>
</form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}